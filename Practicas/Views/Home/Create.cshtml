@model Practicas.Models.Alumnos

@{
    ViewData["Title"] = "Create";
}

<h2 align="center">Crear Registro</h2>

<h4 align="center">Entrada al almacen</h4>
<hr />
<div class="row" align="center">
    <div class="col-md-4 col-md-offset-4" align="center">
        <form asp-action="Create" oninput="resultado.value = parseFloat(valor1.value) * parseFloat(valor2.value).toFixed(2), 
        Iva.value = (parseFloat(valor1.value) * parseFloat(valor2.value)) * 0.16,
        Resul.value = (parseFloat(valor1.value) * parseFloat(valor2.value)) * 1.16">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Clave" class="control-label"></label>
                <input asp-for="Clave" class="form-control" style="text-align:center"/>
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto" class="control-label"></label>
                <input asp-for="Producto" class="form-control" style="text-align:center"/>
                <span asp-validation-for="Producto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_compra" class="control-label">Fecha de compra</label>
                <input asp-for="Fecha_compra" type="date" style="text-align:center" class="form-control" />
                <span asp-validation-for="Fecha_compra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" id="valor1" type="number" step="1" min="0" class="form-control" style="text-align:center"/>
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio_uni" class="control-label">Precio unitario</label>
                <input asp-for="Precio_uni" id="valor2" type="number" step="0.01" min="0.00" class="form-control" style="text-align:center"/>
                <span asp-validation-for="Precio_uni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subtotal" class="control-label">Subtotal</label>
                <input asp-for="Subtotal" name="resultado" for="valor1 valor2" class="form-control" style="text-align:center" disabled/>
                <span asp-validation-for="Subtotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Iva" class="control-label">IVA</label>
                <input asp-for="Iva" name="Iva" for="valor1 valor2" step="0.01" class="form-control" style="text-align:center" disabled/>
                <span asp-validation-for="Iva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Total" class="control-label">Total</label>
                <input asp-for="Total" name="Resul" for="valor1 valor2" class="form-control" style="text-align:center" disabled/>
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group" align="center">
                <input type="submit" value="Crear" class="btn btn-default" />
                <a asp-action="List" class="btn btn-default">Regresar a la lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
