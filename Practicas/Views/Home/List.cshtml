@model IEnumerable<Practicas.Models.Alumnos>

@{
    ViewData["Title"] = "List";
}

<h2 align="center">Registro de compras</h2>
<br />

<table class="table">
    <thead class="bg-primary">
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Clave)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th style="text-align:center">
                Fecha de compra
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th style="text-align:center">
                Precio unitario
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Subtotal)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Iva)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th style="text-align:center">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Clave)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Producto)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Fecha_compra)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Precio_uni)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Subtotal)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Iva)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td align="center">
                <button class="btn btn-default">
                    @Html.ActionLink("Editar", "Update", new { id = item.Id })
                </button> |
                <button class="btn btn-default">
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id })
                </button> |
                <button class="btn btn-default">
                    @Html.ActionLink("Borrar", "Delete", new { id = item.Id })
                </button>
            </td>
        </tr>
}
    </tbody>
</table>
<p align="center">
    <a asp-action="Create" class="btn btn-default">Nuevo Registro</a>
</p>